# For testing various minor APIs

# is_optional()

choice NOT_OPTIONAL
    bool "not optional"
config A
    bool "A"
config B
    bool "B"
endchoice

choice OPTIONAL
    tristate "optional"
    optional
config C
    tristate "C"
config D
    tristate "D"
endchoice

# get_user_value()

config BOOL
    bool "bool"

config TRISTATE
    tristate # Visibility should not affect user value

config STRING
    string "string"

config INT
    int # Visibility should not affect user value

config HEX
    hex "hex"
